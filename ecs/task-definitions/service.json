[
  {
    "essential": true,
    "image": "amazon/aws-for-fluent-bit:latest",
    "name": "log_router",
    "firelensConfiguration": {
      "type": "fluentbit",
      "options": {
        "config-file-type": "file",
        "config-file-value": "/fluent-bit/configs/parse-json.conf",
        "enable-ecs-log-metadata": "true"
      }
    },
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${cloudw}",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "datadog"
        }
      }
    },
    {
      "name": "app",
      "image": "140625812000.dkr.ecr.eu-central-1.amazonaws.com/pet-without-db",
      "cpu": 1024,
      "memory": 2048,
      "networkMode": "awsvpc",
      "environment": [
        {
          "name": "DB_URL",
          "value": "${db_url}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awsfirelens",
        "options": {
          "Name": "datadog",
          "apikey": "${api_key}",
          "dd_service": "firelens-test",
          "dd_source": "redis",
          "dd_tags": "project:fluentbit",
          "provider": "ecs",
          "Host": "http-intake.logs.datadoghq.eu"
        }
      },
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080
      }
    ]
  }
]
